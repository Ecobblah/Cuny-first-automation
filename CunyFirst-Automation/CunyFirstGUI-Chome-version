    //This is the RUn button it should start the program.
    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        Timer timer = new Timer ();
        //open Google Chorme web browser
        System.setProperty("webdriver.chrome.driver", "C://Users/Ecobb/Emmanuel_Workspace/Java/chromedriver_win32/chromedriver.exe");
        WebDriver driver = new  ChromeDriver();
        
        //D is used when the ENd button wants to close the webdrive
        D=driver;
        //Program will run once every hour
        TimerTask hourlyTask = new TimerTask () {
            @SuppressWarnings("deprecation")//for pass
            @Override
            public void run () {
                //open cunyfirst site
                driver.get("https://home.cunyfirst.cuny.edu/oam/Portal_Login1.html");

                //Find the field and enter username
                //find element by html id of the search bar is cf-login and enter my username
                driver.findElement(By.id("cf-login")).sendKeys(jTextField1.getText());
                //Find pass and enter pass from TextLable GUI
                driver.findElement(By.id("password")).sendKeys(jPasswordField1.getText());
                driver.findElement(By.name("submit")).click();

                //open enrollment site
                driver.get("https://hrsa.cunyfirst.cuny.edu/psc/cnyhcprd/EMPLOYEE/HRMS/c/SA_LEARNER_SERVICES_2.SSR_SSENRL_CART.GBL?Page=SSR_SSENRL_CART&Action=A&ACAD_CAREER=UGRD&EMPLID=23154021&INSTITUTION=QNS01&STRM=1169&TargetFrameName=None");
                //check the boxes 1 and 2. Must make an array so use can tell me how many selections
                driver.findElement(By.id("P_SELECT$0")).click();

                //submit
                driver.findElement(By.id("DERIVED_REGFRM1_LINK_ADD_ENRL")).click();
                //wait till you find element
                WebDriverWait wait = new WebDriverWait(driver, 10);
                WebElement element = wait.until(
                    ExpectedConditions.visibilityOfElementLocated(By.id("DERIVED_REGFRM1_SSR_PB_SUBMIT")));
                driver.findElement(By.id("DERIVED_REGFRM1_SSR_PB_SUBMIT")).click();

                /*SWAP classes*/
                driver.get("https://hrsa.cunyfirst.cuny.edu/psc/cnyhcprd/EMPLOYEE/HRMS/c/SA_LEARNER_SERVICES.SSR_SSENRL_SWAP.GBL?Page=SSR_SSENRL_SWAP&Action=A&ACAD_CAREER=UGRD&ENRL_REQUEST_ID=0000000000&INSTITUTION=QNS01&STRM=1169&TargetFrameName=None");
                //This is for drop down menu
                driver.findElement(By.id("DERIVED_REGFRM1_DESCR50$225$")).findElement(By.xpath("//select[@id='DERIVED_REGFRM1_DESCR50$225$']/option[2]")).click();
                driver.findElement(By.id("win0divDERIVED_REGFRM1_SSR_CLASSNAME_35$183$")).findElement(By.xpath("//select[@id='DERIVED_REGFRM1_SSR_CLASSNAME_35$183$']/option[2]")).click();
                driver.findElement(By.id("DERIVED_REGFRM1_SSR_PB_ADDTOLIST1$184$")).click();
                element=wait.until(
                    ExpectedConditions.visibilityOfElementLocated(By.id("DERIVED_REGFRM1_SSR_PB_SUBMIT")));
                driver.findElement(By.id("DERIVED_REGFRM1_SSR_PB_SUBMIT")).click();

                /*ENd of swap*/
                //goes back to enrollment site and checks if there 2 check boxes if it only one or none catch the Exception and end the program
                driver.get("https://hrsa.cunyfirst.cuny.edu/psc/cnyhcprd/EMPLOYEE/HRMS/c/SA_LEARNER_SERVICES_2.SSR_SSENRL_CART.GBL?Page=SSR_SSENRL_CART&Action=A&ACAD_CAREER=UGRD&EMPLID=23154021&INSTITUTION=QNS01&STRM=1169&TargetFrameName=None");
                try{
                    driver.findElement(By.id("P_SELECT$0")).click();
                }
                catch(Exception NOSuchElementException ){
                    /*Send email to user*/
                    System.out.println("Congrats you got into a class!");
                    driver.close();
                    System.exit(1);
                }
                
                date=new Date();
                jTextArea1.append(date.toString()+", Class is full, checking in next hour.\n");
                jTextField1.setVisible(false);
                jButton2.setVisible(false);
                jPasswordField1.setVisible(false);
                jLabel1.setVisible(false);
                jLabel2.setVisible(false);
            }
        };
        //where you can change time
        timer.schedule (hourlyTask, 01, 1000*60*60);

    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        jTextArea1.append("Ending Program!\n");
        D.close();
        System.exit(1);
    }//GEN-LAST:event_jButton1ActionPerformed

